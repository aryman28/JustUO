namespace Server.Items
{
	public class RepSystem4
	{ 

		public static void Initialize()
		{
			CommandSystem.Register( "Sprawdz", AccessLevel.GameMaster, new CommandEventHandler( Sprawdzony_OnCommand ) );    
		} 

		public static void Sprawdzony_OnCommand( CommandEventArgs args )
		{ 
			Mobile m = args.Mobile; 
			PlayerMobile from = m as PlayerMobile; 
          
			if( from != null ) 
			{  
				from.SendMessage ( "Mo¿esz ukryc lub odkryc podstawow¹ wiedzê o przedmiocie." );
				m.Target = new InternalTarget();
			} 
		} 

		private class InternalTarget : Target
		{
			public InternalTarget() : base( 18, false, TargetFlags.None )
			{
			}

		protected override void OnTarget( Mobile from, object target )
		{

      Item BaseArmor = from.Backpack.FindItemByType( typeof( BaseArmor ) );

         if ( target is BaseArmor ) 
         { 
		BaseArmor bas = (BaseArmor)target;

		if( bas.Sprawdzony == true )
			bas.Sprawdzony = false;
		else
			bas.Sprawdzony = true;
	  }
         //else if ( target is BaseJewelery ) 
         //{ 
 
         //} 
		  }


		}
	} 
} 
